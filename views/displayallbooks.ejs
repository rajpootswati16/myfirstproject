<style>
   
    .maincontainer{
        height: 100vh;
        width: 100vw;
        background: #E49393;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .smallbox{
        height: auto;
        width: 70vw;
        background: #D8D8D8;
        border-radius: 25px;
        padding: 15px;
    }

    .heading{
        padding: 5px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        
    }
</style>

<html>
    <head>
        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
    
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    </head>

    <div class="maincontainer">
        <div class="smallbox">
          
        <div class="heading">
            <div>
              <img src="/images/logo.png" width="40" height="40"/>
              <span style="padding-left:10px; letter-spacing: 1; font-family: Poppins; font-size: 18px; font-weight: bold;">Book List</span>
            </div>
                
            <div class="heading">
                <a href="/books/bookinterface" style="text-decoration: none;">
                <img src="/images/add.jpg" width="30" height="30"/>
                </a>
            </div>
        </div>  

    <table class="table table-hover" >
        <thead>
          <tr>
            <th scope="col">Bookid</th>
            <th scope="col">Subjects</th>
            <th scope="col">Title</th>
            <th scope="col">Author <br> Publisher</th>
            <th scope="col">Price <br> Offer</th>
            <th scope="col">Status</th>
            <th scope="col">Poster</th>
            <th scope="col">Edit/Delete</th>
          </tr>
        </thead>

        <tbody class="table-group-divider">
          
            <% data.map((item)=>{ %>
            <tr> 
              <th scope="row"><%= item.bookid %></th>
                <td><%= item.subjectname %></td>
                <td><%= item.title %></td>
                <td><%= item.author %> <br> <%= item.publisher %></td>
                <td><s> <%= item.price %> </s> <br> <%= item.offer %> </td>
                <td><%= item.status %></td>
                <td><img src="/images/<%= item.poster %>" style="height: 45px; width: 40px; border-radius: 10px;"/></td>
                <td><a href="/books/edit_book_data?bookid= <%= item.bookid %>" style="text-decoration: none; font-weight: 500;">Edit/Delete</a></td>
            </tr>
            <% }) %>
            
          
        </tbody>
      </table>

    </div>

       </div>  

</html>